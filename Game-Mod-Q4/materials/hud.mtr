{	
	noShadows
	translucent
	
	{
	    blend add
		Map   gfx/guis/hud/waveform.tga
		colored
		centerscale	1, wavTable[time * 0.6]
		scroll time * .6, 0
		scale 1, 1
	}
}

gfx/guis/hud/s_compobjstatic
{	
	noShadows
	translucent
	
	{	
		maskcolor				
	    map	makealpha(gfx/guis/hud/s_compobjmask.tga)
	}	

	{
	    blend GL_DST_ALPHA, GL_ONE
	    maskAlpha
	    colored
		map gfx/guis/hud/s_static.tga
		scale	1, guitable_10_5[time * 0.5]
		scroll time * -.5, time * 2
	}
}

